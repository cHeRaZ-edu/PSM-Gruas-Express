<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgViewBackgroundSetting"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:contentDescription="Usuario"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgViewUserSetting"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="Usuario"
                    android:src="@drawable/ic_photo_camera_black_56dp" />

                <TextView
                    android:id="@+id/tvNicknameSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="15dp"
                    android:text="Usuario"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </FrameLayout>
            <TextView
                android:id="@+id/txtViewInfoCustom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="Informacion"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtViewNameCustom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Nombre: "
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.9">
                        <android.support.v7.widget.CardView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_gravity="right">

                            <EditText
                                android:id="@+id/editTxtNameSetting"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="@color/white"
                                android:hint="Nombre"
                                android:inputType="text"
                                android:padding="4dp" />
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/txtViewApellidoCustom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="Apellido:"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.9">
                    <android.support.v7.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="right">

                        <EditText
                            android:id="@+id/editTxtLastNameSetting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@color/white"
                            android:hint="Apellido"
                            android:inputType="text"
                            android:padding="4dp" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:layout_marginStart="15dp"
               android:orientation="horizontal">
               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Correo:"
                   android:textSize="20sp"
                   android:textColor="@color/white"
                   android:textStyle="bold"/>
               <TextView
                   android:id="@+id/tvEmailSetting"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="14sp"
                   android:layout_marginLeft="10dp"
                   android:textColor="@color/white"
                   android:text="example@example.example"/>
           </LinearLayout>

            <TextView
                android:id="@+id/txtViewChangeImageCustom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="Cambiar Imagen"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtViewImgUserCustom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="Imagen Usuario"
                    android:textSize="18sp"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imgBtnUserSetting"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="end|top"
                        android:layout_marginEnd="20dp"
                        android:contentDescription="Buscar imagen"
                        app:srcCompat="@android:drawable/ic_search_category_default" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtViewImgBackgroundUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="Portada Usuario"
                    android:textSize="18sp"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.1">

                    <ImageButton
                        android:id="@+id/imgBtnBackgroundSetting"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="end|top"
                        android:layout_marginEnd="20dp"
                        android:contentDescription="Buscar"
                        app:srcCompat="@android:drawable/ic_search_category_default" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/textViewTelefonoTitleCustom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="Telefono"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/txtViewTelefonoCustom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:text="Telefono"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.9">
                    <android.support.v7.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="15dp">

                        <EditText
                            android:id="@+id/editTxtPhoneSetting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@color/white"
                            android:hint="Telefono"
                            android:inputType="number"
                            android:padding="4dp" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/background_secoundary">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_bottom"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@color/background_secoundary"
            android:minHeight="?android:actionBarSize"
            app:theme="@style/AppThemeBar"
            app:menu="@menu/toolbar_shortcut"/>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnSaveSetting"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/background_secoundary"
        android:scaleType="center"
        android:src="@android:drawable/ic_menu_save"
        app:borderWidth="0dp"
        app:fabSize="normal" />


</RelativeLayout>