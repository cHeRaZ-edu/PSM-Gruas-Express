<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewVote"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <!--Value Star-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingTop="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvPromedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="36sp"
            android:layout_gravity="left"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
    <!--Rating star-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <RatingBar
            android:id="@+id/ratingBarService"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="5" />
    </LinearLayout>
    <!--Slider Bar color-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:id="@+id/barRatting_5"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:backgroundTint="#09a904"
                android:layout_marginRight="15dp"
                android:layout_weight="0.80"/>
            <LinearLayout
                android:id="@+id/paddingRatting_5"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="0.20"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:id="@+id/barRatting_4"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:backgroundTint="#96e763"
                android:layout_marginRight="15dp"
                android:layout_weight="0.50"/>
            <LinearLayout
                android:id="@+id/paddingRatting_4"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_weight="0.50"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:id="@+id/barRatting_3"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:backgroundTint="#f1ed0b"
                android:layout_marginRight="15dp"
                android:layout_weight="0.3"/>
            <LinearLayout
                android:id="@+id/paddingRatting_3"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_weight="0.7"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:id="@+id/barRatting_2"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:backgroundTint="#f25309"
                android:layout_marginRight="15dp"
                android:layout_weight="0.1"/>
            <LinearLayout
                android:id="@+id/paddingRatting_2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="0.9"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:id="@+id/barRatting_1"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:backgroundTint="#f92509"
                android:layout_marginRight="15dp"
                android:layout_weight="0.03"/>
            <LinearLayout
                android:id="@+id/paddingRatting_1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="0.97"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>